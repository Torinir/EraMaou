;奉仕技術のLvUP処理とその可否判定
;eraIm@s_ver.0.17βdのスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)


;-------------------------------------------------
;奉仕技術のLvUP
;-------------------------------------------------
@ABLUP13
DRAWLINE
;PRINTL 奴隷の奉仕技術をUPします
;PRINTL 奉仕技術が高いと,奉仕の際に相手をイかせやすくなります
;PRINTL ..............................................................................
;奉仕精神がLv5以上ある場合はLv10まで解放
IF (ABL:13 >= 5 && ABL:16 < 5) || ABL:13 >= 10
	PRINTW Already At MAX.
	RETURN 0
;奉仕技術+性交技術は11以上にならない
ELSEIF ABL:13 + ABL:14 >= 10
	PRINTFORMW 奉仕技術({ABL:13})+性交技術({ABL:14})の上限は10です
	RETURN 0
ENDIF

;必要な習得の珠
A = 0

;条件別にＯＫかダメかを記録する
;習得の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足)
I = 0

CALL DECIDE_ABLUP13

;Lv5までは技巧が奉仕技術+1Lvでないといけない
SIF ABL:13 < 5
	PRINTFORML %ABLNAME:12%{ABL:13 + 1}LV以上(現在{ABL:12}LV)かつ
;Lv5からは奉仕精神が奉仕技術+1Lvでないといけない
SIF ABL:13 >= 5
	PRINTFORML %ABLNAME:16%{ABL:13 + 1}LV以上(現在{ABL:16}LV)かつ

PRINTFORM [0] - %PALAMNAME:7%の珠×{JUEL:7}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT 能力不足 
ENDIF
PRINTL 
PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:13 += 1
SIF RESULT == 0
	JUEL:7 -= A

PRINTFORML %ABLNAME:13%のレベルが{ABL:13}になりました

RETURN 0

;--------------------------------------------------
;奉仕技術のLvUP可否判定
;--------------------------------------------------
@DECIDE_ABLUP13
;奉仕精神Lv5以上ある場合はLv10まで解放
IF ABL:13 >= 5 && ABL:16 < 5
	RETURN 0
ELSEIF ABL:13 + ABL:14 >= 10
	RETURN 0
ENDIF

;判定変数を空に
A = 0
I = 0

IF ABL:13 == 0
	A = 5
ELSEIF ABL:13 == 1
	A = 400
ELSEIF ABL:13 == 2
	A = 1000
ELSEIF ABL:13 == 3
	A = 3000
ELSEIF ABL:13 == 4
	A = 6000
ELSEIF ABL:13 == 5
	A = 9000
ELSEIF ABL:13 == 6
	A = 12000
ELSEIF ABL:13 == 7
	A = 16000
ELSEIF ABL:13 == 8
	A = 20000
ELSEIF ABL:13 == 9
	A = 25000
ENDIF

;一線越えない
IF TALENT:27
	SIF ABL:13 == 3
		TIMES A , 1.50
	SIF ABL:13 == 4
		TIMES A , 2.00
	SIF ABL:13 == 5
		TIMES A , 2.50
	SIF ABL:13 >= 6
		TIMES A , 3.00
ENDIF

;反抗的
IF TALENT:11
	TIMES A , 1.20
ENDIF
;素直
IF TALENT:13
	TIMES A , 0.95
ENDIF
;生意気
IF TALENT:16
	TIMES A , 1.20
ENDIF

;プライド高い
IF TALENT:15
	TIMES A , 1.20
;プライド低い
ELSEIF TALENT:17
	TIMES A , 0.95
ENDIF

;無関心
IF TALENT:21
	TIMES A , 1.05
ENDIF
;感情乏しい
IF TALENT:22
	TIMES A , 1.05
ENDIF
;好奇心
IF TALENT:23
	TIMES A , 0.95
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.10
ENDIF

;抑圧
IF TALENT:32
	TIMES A , 1.10
;解放
ELSEIF TALENT:33
	TIMES A , 0.90
ENDIF

;抵抗
IF TALENT:34
	TIMES A , 1.20
ENDIF

;恥じらい
IF TALENT:35
	TIMES A , 1.05
;恥薄い
ELSEIF TALENT:36
	TIMES A , 0.95
ENDIF

;弱味
IF TALENT:37
	TIMES A , 0.90
ENDIF

;習得早い
IF TALENT:50
	TIMES A , 0.80
;習得遅い
ELSEIF TALENT:51
	TIMES A , 1.50
ENDIF

;舌使い
IF TALENT:52
	TIMES A , 0.90
ENDIF
;献身的
IF TALENT:63
	TIMES A , 0.90
ENDIF
;汚れ無視
IF TALENT:64
	TIMES A , 0.90
ENDIF
;即落ち
IF TALENT:73
	TIMES A , 0.90
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.95
ENDIF
;サド
IF TALENT:83
	TIMES A , 1.10
ENDIF

;奉仕精神
IF ABL:16 < 3
	TIMES A , 1.00
ELSEIF ABL:16 < 6
	TIMES A , 0.95
ELSEIF ABL:16 < 8
	TIMES A , 0.90
ELSEIF ABL:16 < 10
	TIMES A , 0.85
ELSE
	TIMES A , 0.80
ENDIF

;最低でも1個は必要
SIF A < 1
	A = 1

;習得の珠は足りている?
SIF JUEL:7 < A
	I |= 1

;Lv5までは技巧が奉仕技術+1Lvでないといけない
SIF ABL:13 < 5 && ABL:12 < ABL:13 + 1
	I |= 2
;Lv5からは奉仕精神が奉仕技術+1Lvでないといけない
SIF ABL:13 >= 5 && ABL:16 < ABL:13 + 1
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
