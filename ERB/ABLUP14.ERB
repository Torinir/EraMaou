;性交技術のLvUP処理とその可否判定
;eraIm@s_ver.0.17βdのスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)


;-------------------------------------------------
;性交技術のLvUP
;-------------------------------------------------
@ABLUP14
DRAWLINE
;PRINTL 奴隷の性行為の技術をUPします
;PRINTL 性交技術が高いと,性行為の際に相手をイかせやすくなります
;PRINTL ..............................................................................
;性交技術の上限は10
IF ABL:14 >= 10
	PRINTW Already At MAX.
	RETURN 0
;奉仕技術+性交技術は11以上にならない
ELSEIF ABL:13 + ABL:14 >= 10
	PRINTFORMW 奉仕技術({ABL:13})+性交技術({ABL:14})の上限は10です
	RETURN 0
ENDIF

;必要な習得の珠
A = 0
;必要な性交経験
B = 0

;条件別にＯＫかダメかを記録する
;習得の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足)
I = 0

CALL DECIDE_ABLUP14

;Lv5までは技巧が性交技術+1Lvでないといけない
SIF ABL:14 < 5
	PRINTFORML %ABLNAME:12%{ABL:14 + 1}LV以上(現在{ABL:12}LV)かつ

PRINTFORM [0] - %PALAMNAME:7%の珠×{JUEL:7}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足
ENDIF
PRINTL 
PRINTFORML       %EXPNAME:5%　{EXP:5}/{B}

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:14 += 1
SIF RESULT == 0
	JUEL:7 -= A

PRINTFORML %ABLNAME:14%のレベルが{ABL:14}になりました

RETURN 0

;--------------------------------------------------
;性交技術のLvUP可否判定
;--------------------------------------------------
@DECIDE_ABLUP14
SIF ABL:13 + ABL:14 >= 10
	RETURN 0

;判定変数を空に
A = 0
B = 0
I = 0

IF ABL:14 == 0
	A = 1
	B = 3
ELSEIF ABL:14 == 1
	A = 10
	B = 10
ELSEIF ABL:14 == 2
	A = 100
	B = 30
ELSEIF ABL:14 == 3
	A = 1500
	B = 80
ELSEIF ABL:14 == 4
	A = 4000
	B = 100
ELSEIF ABL:14 == 5
	A = 5000
	B = 130
ELSEIF ABL:14 == 6
	A = 6500
	B = 160
ELSEIF ABL:14 == 7
	A = 8000
	B = 200
ELSEIF ABL:14 == 8
	A = 10000
	B = 250
ELSEIF ABL:14 == 9
	A = 15000
	B = 300
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:14 == 3
		TIMES A , 1.50
		TIMES B , 1.50
	ELSEIF ABL:14 == 4
		TIMES A , 2.00
		TIMES B , 2.00
	ELSEIF ABL:14 == 5
		TIMES A , 2.50
		TIMES B , 2.50
	ELSEIF ABL:14 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
	ENDIF
ENDIF

;素直
IF TALENT:13
	TIMES A , 0.90
	TIMES B , 0.95
ENDIF
;無関心
IF TALENT:21
	TIMES A , 1.10
	TIMES B , 1.05
ENDIF
;感情乏しい
IF TALENT:22
	TIMES A , 1.10
	TIMES B , 1.05
ENDIF
;好奇心
IF TALENT:23
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.20
	TIMES B , 1.10
ENDIF

;抑圧
IF TALENT:32
	TIMES A , 1.10
	TIMES B , 1.05
;解放
ELSEIF TALENT:33
	TIMES A , 0.90
	TIMES B , 0.95
ENDIF

;抵抗
IF TALENT:34
	TIMES A , 1.20
	TIMES B , 1.10
ENDIF

;恥じらい
IF TALENT:35
	TIMES A , 1.10
	TIMES B , 1.05
;恥薄い
ELSEIF TALENT:36
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;習得早い
IF TALENT:50
	TIMES A , 0.80
	TIMES B , 0.80
;習得遅い
ELSEIF TALENT:51
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF

;献身的
IF TALENT:63
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF
;汚れ無視
IF TALENT:64
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;性交中毒
IF ABL:30 < 3
	TIMES A , 1.00
	TIMES B , 1.00
ELSEIF ABL:30 < 6
	TIMES A , 0.95
	TIMES B , 0.95
ELSEIF ABL:30 < 8
	TIMES A , 0.90
	TIMES B , 0.90
ELSEIF ABL:30 < 10
	TIMES A , 0.85
	TIMES B , 0.85
ELSE
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF

;最低でも1回-1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1

;習得の珠は足りている?
SIF JUEL:7 < A
	I |= 1
;性交経験が必要
SIF EXP:5 < B
	I |= 2
;Lv4までは技巧が必要
SIF ABL:12 < 5 && ABL:12 < ABL:14 + 1
	I |= 4

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
