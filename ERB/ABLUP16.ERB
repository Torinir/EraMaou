	TIMES E , 0.80
ENDIF

;狂気
IF TALENT:123
	TIMES A , 2.50
	TIMES B , 3.00
	TIMES C , 1.50
	TIMES D , 0.80
	TIMES E , 0.50
ENDIF

;崩壊
IF TALENT:9
	TIMES A , 2.50
	TIMES B , 2.50
	TIMES C , 2.50
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF

;最低でも1回-1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF D < 1
	D = 1
SIF E < 1
	E = 1

;屈服の珠は足りている?
SIF JUEL:6 < A
	I |= 1

;恭順の珠は足りている?
IF B > 0
	SIF JUEL:4 < B
		J |= 1
	;この場合奉仕快楽経験が必要なことあり
	SIF EXP:21 < D
		J |= 2
ELSE
	J = 256
ENDIF

;習得の珠は足りている?
IF C > 0
	SIF JUEL:7 < C
		K |= 1
	;この場合絶頂経験が1以上必要
	SIF EXP:2 < 1
		K |= 2
ELSE
	K = 256
ENDIF

;絶頂経験が必要な場合
SIF EXP:2 < E
	I |= 2
;精液経験が必要な場合
SIF EXP:20 < E
	I |= 2

;従順が奉仕精神+1レベルでないと能力不足
IF ABL:10 < ABL:16 + 1
	I |= 4
	J |= 4
	K |= 4
ENDIF

;異常経験が不足
IF F > EXP:50
	I |= 2
	J |= 2
	K |= 2
ENDIF

IF I == 0 || J == 0 || K == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
