;奉仕精神のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化

;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;奉仕精神のLvUP
;-------------------------------------------------
@ABLUP16
DRAWLINE
;PRINTL 奴隷の奉仕精神を高めます
;PRINTL 奉仕精神が高いと,性的な奉仕に歓びを感じるようになります
;PRINTL ..............................................................................
;奉仕精神はLv5が上限
;[愛][妄信][献身的]が付いている場合はLv10まで解放
IF ABL:16 >= 5 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	PRINTW Character qualities must be improved before this can be raised further.
	RETURN 0
ELSEIF ABL:16 >= 10
	PRINTW Already At MAX.
	RETURN 0
ENDIF

;必要な屈服の珠
A = 0
;必要な恭順の珠
B = 0
;必要な習得の珠
C = 0
;必要な奉仕快楽経験回数
D = 0
;必要な絶頂経験＆精液経験回数
E = 0
;必要な異常経験回数
F = 0

;条件別にＯＫかダメかを記録する
;屈服の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足,I&4:能力不足)
I = 0
;恭順の珠による可否(J=0:可,J&1:珠不足,J&2:経験不足,J&4:能力不足,J=256:そのレベルでは自動不可)
J = 0
;習得の珠による可否(K=0:可,K&1:珠不足,K&2:経験不足,K&4:能力不足,K=256:そのレベルでは自動不可)
K = 0

CALL DECIDE_ABLUP16

;従順が奉仕精神+1レベルでないといけない
PRINTFORML %ABLNAME:10%{ABL:16+1}LV以上(現在{ABL:10}LV)かつ

;ＬV３から４,４から5に上げるときは異常経験必要(素質:[妄信]なら無視できる)
SIF F > 0
	PRINTFORML %EXPNAME:50%{F}以上(現在{EXP:50})かつ

;屈服の珠で上げる
PRINTFORM [0] - %PALAMNAME:6%の珠×{JUEL:6}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
IF E > 0
	PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/{E}
	PRINTFORML 　　　%EXPNAME:20%　{EXP:20}/{E}
ENDIF

IF B > 0
	;恭順の珠で上げる
	PRINTFORM [1] - %PALAMNAME:4%の珠×{JUEL:4}/{B} ......
	IF J == 0
		PRINT OK
	ELSE
		SIF J & 1
			PRINT Not enough points 
		SIF J & 2
			PRINT Not enough exp 
		SIF J & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	SIF D > 0
		PRINTFORML 　　　%EXPNAME:21%　{EXP:21}/{D}
ENDIF

IF C > 0
	;習得の珠で上げる
	PRINTFORM [2] - %PALAMNAME:7%の珠×{JUEL:7}/{C} ......
	IF K == 0
		PRINT OK
	ELSE
		SIF K & 1
			PRINT Not enough points 
		SIF K & 2
			PRINT Not enough exp 
		SIF K & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/1
ENDIF

PRINTL [100] - やめる

$INPUT_LOOP
INPUT
IF (RESULT < 0 || RESULT > 2) && RESULT != 100
	GOTO INPUT_LOOP
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	GOTO INPUT_LOOP
ELSEIF J == 256 && RESULT == 1
	GOTO INPUT_LOOP
ELSEIF J != 0 && RESULT == 1
	PRINTL Requirements haven't been met
	GOTO INPUT_LOOP
ELSEIF K == 256 && RESULT == 2
	GOTO INPUT_LOOP
ELSEIF K != 0 && RESULT == 2
	PRINTL Requirements haven't been met
	GOTO INPUT_LOOP
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:16 += 1

IF RESULT == 0
	JUEL:6 -= A
ELSEIF RESULT == 1
	JUEL:4 -= B
ELSEIF RESULT == 2
	JUEL:7 -= C
ENDIF

PRINTFORML %ABLNAME:16%のレベルが{ABL:16}になりました

RETURN 0

;-------------------------------------------------
;奉仕精神のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP16
SIF ABL:16 >= 10
	RETURN 0
SIF ABL:16 >= 5 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	RETURN 0

;判定変数を空に
I = 0
J = 0
K = 0

A = 0
B = 0
C = 0
D = 0
E = 0
F = 0



IF ABL:16 == 0
	A = 100
	B = 20
	C = 100
	D = 1
	E = 1
ELSEIF ABL:16 == 1
	A = 1200
	B = 400
	C = 2000
	D = 1
	E = 3
ELSEIF ABL:16 == 2
	A = 5000
	B = 2000
	C = 10000
	D = 20
	E = 6
ELSEIF ABL:16 == 3
	A = 10000
	B = 3000
	C = 0
	D = 20
	E = 10
ELSEIF ABL:16 == 4
	A = 30000
	B = 10000
	C = 0
	D = 100
	E = 20
ELSEIF ABL:16 == 5
	A = 50000
	B = 20000
	C = 0
	D = 200
	E = 80
ELSEIF ABL:16 == 6
	A = 70000
	B = 30000
	C = 0
	D = 350
	E = 150
ELSEIF ABL:16 == 7
	A = 100000
	B = 50000
	C = 0
	D = 500
	E = 200
ELSEIF ABL:16 == 8
	A = 150000
	B = 80000
	C = 0
	D = 700
	E = 400
ELSEIF ABL:16 == 9
	A = 200000
	B = 150000
	C = 0
	D = 1000
	E = 800
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:16 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES D , 1.50
		TIMES E , 1.50
	ELSEIF ABL:16 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
	ELSEIF ABL:16 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES D , 2.50
		TIMES E , 2.50
	ELSEIF ABL:16 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
	ENDIF
ENDIF

;ＬV３以上に上げるときは異常経験必要(素質:[献身的][愛][妄信]なら無視できる)
IF ABL:16 >= 3 && (TALENT:63 == 0 && TALENT:85 == 0 && TALENT:86 == 0)
	F = ABL:16 - 2
ENDIF

;反抗的
IF TALENT:11
	TIMES A , 1.20
	TIMES B , 1.40
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;気丈
IF TALENT:12
	TIMES A , 1.20
	TIMES D , 1.20
ENDIF

;素直
IF TALENT:13
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.70
ENDIF

;生意気
IF TALENT:16
	TIMES A , 1.10
	TIMES B , 1.10
ENDIF

;プライド高い
IF TALENT:15
	TIMES A , 1.40
	TIMES B , 1.30
	TIMES D , 1.20
	TIMES E , 1.20
;プライド低い
ELSEIF TALENT:17
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF

;自制心
IF TALENT:20
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;無関心
IF TALENT:21
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES D , 1.20
	TIMES E , 1.10
ENDIF

;感情乏しい
IF TALENT:22
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.40
	TIMES E , 1.20
ENDIF

;保守的
IF TALENT:24
	TIMES A , 1.30
	TIMES B , 1.30
	TIMES C , 1.30
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;楽観的
IF TALENT:25
	TIMES A , 0.90
	TIMES B , 0.80
	TIMES D , 0.70
	TIMES E , 0.75
;悲観的
ELSEIF TALENT:26
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF

;目立ちたがり
IF TALENT:28
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
	TIMES D , 0.90
ENDIF

;抑圧
IF TALENT:32
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES D , 2.50
	TIMES E , 3.00
;解放
ELSEIF TALENT:33
	TIMES A , 0.90
