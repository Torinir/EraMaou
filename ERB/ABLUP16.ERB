	TIMES E , 2.00
ENDIF

;弱味
IF TALENT:37
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF

;習得早い
SIF TALENT:50
	TIMES C , 0.80

;習得遅い
SIF TALENT:51
	TIMES C , 1.60

;舌使い
SIF TALENT:52
	TIMES C , 0.80

;献身的
IF TALENT:63
	TIMES A , 0.80
	TIMES B , 0.70
	TIMES D , 0.60
	TIMES E , 0.80
ENDIF

;快感に素直
IF TALENT:70
	TIMES E , 0.70
;快感の否定
ELSEIF TALENT:71
	TIMES E , 3.00
ENDIF

;即落ち
IF TALENT:73
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
	TIMES D , 0.75
	TIMES E , 0.75
ENDIF

;サド
IF TALENT:83
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES D , 1.50
ENDIF

;愛
