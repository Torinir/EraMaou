;サドッ気のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;サドッ気のLvUP
;-------------------------------------------------
@ABLUP20
DRAWLINE
;PRINTL 奴隷のサドっ気を高めます
;PRINTL サドっ気が高いと,誰かに苦痛を与えることで欲情が高まります
;PRINTL ..............................................................................
;サドッ気はLv5が上限
;[倒錯的][サド][逆襲]が付いている場合はLv10まで解放
IF ABL:20 >= 5 && (TALENT:80 == 0 && TALENT:83 == 0 && TALENT:127 == 0)
	PRINTW Character qualities must be improved before this can be raised further.
	RETURN 0
;サドっ気+マゾっ気は20以上にならない
ELSEIF ABL:20 + ABL:21 >= 20
	PRINTFORMW サドっ気({ABL:20})+マゾっ気({ABL:21})の上限は20です
	RETURN 0
ELSEIF ABL:20 >= 10
	PRINTW Already At MAX.
	RETURN 0
ENDIF

;必要な欲情の珠
A = 0
;必要な嗜虐快楽経験回数
B = 0
;必要な異常経験回数
C = 0

;条件別にＯＫかダメかを記録する
;欲情の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足,I&4:能力不足)
I = 0

CALL DECIDE_ABLUP20

;欲望がサドっ気+1レベルでないといけない
PRINTFORML %ABLNAME:11%{ABL:20+1}LV以上(現在{ABL:11}LV)かつ

;ＬV３から４,４から5に上げるときは異常経験必要(素質:[倒錯的][サド][嫉妬][小悪魔]なら無視できる)
SIF C > 0
	PRINTFORML %EXPNAME:50%{C}以上(現在{EXP:50})かつ

PRINTFORM [0] - %PALAMNAME:5%の珠×{JUEL:5}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
;嗜虐快楽経験
SIF B > 0
	PRINTFORML 　　　%EXPNAME:33%　{EXP:33}/{B}

PRINTL [100] - やめる

INPUT
IF RESULT != 0 && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:20 += 1

JUEL:5 -= A

PRINTFORML %ABLNAME:20%のレベルが{ABL:20}になりました

RETURN 0

;-------------------------------------------------
;マゾっ気のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP20
;[倒錯的][サド][逆襲]が付いている場合はLv10まで解放
SIF ABL:20 >= 5 && (TALENT:80 == 0 && TALENT:83 == 0 && TALENT:127 == 0)
	RETURN 0
;サドっ気+マゾっ気は20以上にならない
SIF ABL:20 + ABL:21 >= 20
	RETURN 0
;サドッ気はLv10が上限
SIF ABL:20 >= 10
	RETURN 0


;必要な欲情の珠
A = 0
;必要な嗜虐快楽経験回数
B = 0
;必要な異常経験回数
C = 0

;条件別にＯＫかダメかを記録する
;欲情の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足,I&4:能力不足)
I = 0

IF ABL:20 == 0
	A = 100
	B = 5
ELSEIF ABL:20 == 1
	A = 500
	B = 20
ELSEIF ABL:20 == 2
	A = 1500
	B = 50
ELSEIF ABL:20 == 3
	A = 3000
	B = 120
ELSEIF ABL:20 == 4
	A = 5000
	B = 300
ELSEIF ABL:20 == 5
	A = 8000
	B = 600
ELSEIF ABL:20 == 6
	A = 12000
	B = 1500
ELSEIF ABL:20 == 7
	A = 15000
	B = 3000
ELSEIF ABL:20 == 8
	A = 25000
	B = 5000
ELSEIF ABL:20 == 9
	A = 30000
	B = 8000
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:20 == 3
		TIMES C , 1.50
		TIMES D , 1.50
		TIMES E , 1.50
	ELSEIF ABL:20 == 4
		TIMES C , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
	ELSEIF ABL:20 == 5
		TIMES C , 2.50
		TIMES D , 2.50
		TIMES E , 2.50
	ELSEIF ABL:20 >= 6
		TIMES C , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
	ENDIF
ENDIF

;ＬV３から４,４から5,７から８に上げるときは異常経験必要(素質:[倒錯的][サド][嫉妬][小悪魔]なら無視できる)
SIF (ABL:20 == 3 || ABL:20 == 4 || ABL:20 == 7) && TALENT:80 == 0 && TALENT:83 == 0 && TALENT:84 == 0 && TALENT:87 == 0
	C = ABL:20 - 2

;必要な絶頂経験数は全レベル1
G = 1

;臆病
IF TALENT:10
	TIMES A , 1.50
ENDIF
;反抗的
IF TALENT:11
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;気丈
SIF TALENT:12
	TIMES A , 0.90
;大人しい
SIF TALENT:14
	TIMES A , 1.20
;生意気
IF TALENT:16
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;プライド高い
IF TALENT:15
	TIMES A , 0.90
	TIMES B , 0.90
;プライド低い
ELSEIF TALENT:17
	TIMES A , 1.10
	TIMES B , 1.10
ENDIF

;自制心
IF TALENT:20
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;無関心
IF TALENT:21
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;感情乏しい
IF TALENT:22
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF
;好奇心
IF TALENT:23
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;悲観的
SIF TALENT:26
	TIMES A , 1.10
;目立ちたがり
IF TALENT:28
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;貞操観念
IF TALENT:30
	TIMES A , 1.10
	TIMES B , 1.10
;貞操無頓着
ELSEIF TALENT:31
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;抑圧
IF TALENT:32
	TIMES A , 0.95
	TIMES B , 0.95
;解放
ELSEIF TALENT:33
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;男嫌いor男勝り
IF TALENT:79 || TALENT:82
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;痛みに弱い
IF TALENT:40
	TIMES A , 1.20
	TIMES B , 1.20
;痛みに強い
ELSEIF TALENT:41
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;淫乱
IF TALENT:76
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF
;倒錯的
IF TALENT:80
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;サド
IF TALENT:83
	TIMES A , 0.50
	TIMES B , 0.50
ENDIF
;マゾ
IF TALENT:88
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;嫉妬
IF TALENT:84
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;小悪魔
IF TALENT:87
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;狂気
IF TALENT:123
	TIMES A , 0.50
	TIMES B , 0.50
ENDIF
;崩壊
IF TALENT:9
	TIMES A , 2.00
	TIMES B , 2.00
ENDIF

;欲情の珠が不足
SIF JUEL:5 < A
	I |= 1

;嗜虐快楽経験が不足
SIF EXP:33 < B
	I |= 2

;異常経験が不足
SIF EXP:50 < C
	I |= 2

;欲望がサドっ気+1レベルでないといけない
SIF ABL:11 < ABL:20 + 1
	I |= 4

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

