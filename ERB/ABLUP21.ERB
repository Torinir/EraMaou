IF D > 0
	PRINTFORM [1] - %PALAMNAME:9%の珠×{JUEL:9}/{D} ......
	IF J == 0
		PRINT OK
	ELSE
		SIF J & 1
			PRINT Not enough points 
		SIF J & 2
			PRINT Not enough exp 
		SIF J & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	;屈服の珠
	PRINTFORML 　　　%PALAMNAME:6%の珠×{JUEL:6}/{E}
	;被虐快楽経験
	SIF C > 0
		PRINTFORML 　　　%EXPNAME:30%　{EXP:30}/{C}
	;絶頂経験
	SIF G > 0
		PRINTFORML 　　　%EXPNAME:2%　{EXP:2}/{G}
ENDIF

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF J == 256 && RESULT == 1
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:21 += 1

IF RESULT == 0
	JUEL:9 -= A
	JUEL:5 -= B
ELSEIF RESULT == 1
	JUEL:9 -= D
	JUEL:6 -= E
ENDIF

PRINTFORML %ABLNAME:21%のレベルが{ABL:21}になりました

RETURN 0

