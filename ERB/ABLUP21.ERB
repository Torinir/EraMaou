	PRINTFORM [0] - %PALAMNAME:9%の珠×{JUEL:9}/{A} ......
	IF I == 0
		PRINT OK
	ELSE
		SIF I & 1
			PRINT Not enough points 
		SIF I & 2
			PRINT Not enough exp 
		SIF I & 4
			PRINT 能力不足 
	ENDIF
