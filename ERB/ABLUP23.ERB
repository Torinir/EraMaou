ENDIF

;快感に素直
IF TALENT:70
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
	TIMES D , 0.95
;快感の否定
ELSEIF TALENT:71
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
	TIMES D , 1.20
ENDIF

;倒錯的
IF TALENT:80
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.80
ENDIF
;両刀
IF TALENT:81
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF
;狂気
IF TALENT:123
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF

;最低でも1回-1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1

;異常経験が不足
IF EXP:50 < E
	I |= 2
	J |= 2
ENDIF

;欲情の珠が不足
SIF JUEL:5 < A
	I |= 1
;屈服の珠が不足
SIF JUEL:6 < C
	I |= 1
;ＢＬ経験が不足
SIF EXP:41 < B
	I |= 2

;A感覚で上げる場合
IF D > 0
	;快Aの珠が不足
	SIF JUEL:2 < D
		J |= 1
	;ＢＬ経験が不足
	SIF EXP:41 < B
		J |= 2
ELSE
	J = 256
ENDIF

IF I == 0 || J == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
