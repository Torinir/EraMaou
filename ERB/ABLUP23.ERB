;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;ＢＬっ気のLvUP
;-------------------------------------------------
@ABLUP23
;オトコでないととダメ
SIF TALENT:122 == 0
	RETURN 0
DRAWLINE
;PRINTL 奴隷のＢＬっ気を高めます
;PRINTL ＢＬっ気が高いと,男同士の性行為や奉仕からより大きな快楽を得られるようになります
;PRINTL ..............................................................................
;ＢＬっ気はLv5が上限
;[解放][倒錯的][両刀][狂気]が付いている場合はLv10まで解放
IF ABL:23 >= 5 && (TALENT:33 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:123 == 0)
	PRINTW Character qualities must be improved before this can be raised further.
	RETURN 0
ELSEIF ABL:23 >= 10
	PRINTW Already At MAX.
	RETURN 0
ENDIF

;必要な欲情の珠
A = 0
;必要なＢＬ経験
B = 0
;必要な屈服の珠
C = 0
;必要な快Aの珠
D = 0
;必要な異常経験回数
E = 0

;条件別にＯＫかダメかを記録する
;欲情+屈服の珠による可否(I=0:可,I&1:珠不足,I&2:経験不足,I&4:能力不足)
I = 0
;快Ｃの珠による可否(I=0:可,I&1:珠不足,I&2:経験不足,I&4:能力不足)
J = 0

CALL DECIDE_ABLUP23

;ＬV３から４,４から5に上げるときは異常経験必要
SIF E > 0
	PRINTFORML %EXPNAME:50%{E}以上(現在{EXP:50})かつ

;欲情+屈服の珠で上げる場合
PRINTFORM [0] - %PALAMNAME:5%の珠×{JUEL:5}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
SIF C > 0
	PRINTFORML 　　　%PALAMNAME:6%の珠×{JUEL:6}/{C}
;ＢＬ経験
PRINTFORML 　　　%EXPNAME:41%　{EXP:41}/{B}

;快Aの珠で上げる場合
IF D > 0
	PRINTFORM [1] - %PALAMNAME:2%の珠×{JUEL:2}/{D} ......
	IF J == 0
		PRINT OK
	ELSE
		SIF J & 1
			PRINT Not enough points 
		SIF J & 2
			PRINT Not enough exp 
		SIF J & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	;ＢＬ経験
	PRINTFORML 　　　%EXPNAME:41%　{EXP:41}/{B}
ENDIF

PRINTL [100] - やめる


INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF J == 256 && RESULT == 1
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:23 += 1

IF RESULT == 0
	JUEL:5 -= A
	JUEL:6 -= C
ELSEIF RESULT == 1
	JUEL:2 -= D
ENDIF

PRINTFORML %ABLNAME:23%のレベルが{ABL:23}になりました

RETURN 0

;-------------------------------------------------
;ＢＬっ気のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP23
;オトコでないとダメ
SIF TALENT:122 == 0
	RETURN 0
;ＢＬっ気はLv5が上限
;[解放][倒錯的][両刀][狂気]が付いている場合はLv10まで解放
SIF ABL:23 >= 5 && (TALENT:33 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:123 == 0)
	RETURN 0
SIF ABL:23 >= 10
	RETURN 0

;判定変数を空に
I = 0
J = 0

A = 0
B = 0
C = 0
D = 0
E = 0

IF ABL:23 == 0
	A = 200
	B = 50
	C = 0
	D = 1000
ELSEIF ABL:23 == 1
	A = 1000
	B = 150
	C = 0
	D = 5000
ELSEIF ABL:23 == 2
	A = 3000
	B = 300
	C = 1000
	D = 0
ELSEIF ABL:23 == 3
	A = 8000
	B = 500
	C = 2000
	D = 0
ELSEIF ABL:23 == 4
	A = 20000
	B = 800
	C = 5000
	D = 0
ELSEIF ABL:23 == 5
	A = 40000
	B = 1200
	C = 10000
	D = 0
ELSEIF ABL:23 == 6
	A = 80000
	B = 1800
	C = 13000
	D = 0
ELSEIF ABL:23 == 7
	A = 150000
	B = 2600
	C = 18000
	D = 0
ELSEIF ABL:23 == 8
	A = 200000
	B = 3600
	C = 30000
	D = 0
ELSEIF ABL:23 == 9
	A = 300000
	B = 5000
	C = 50000
	D = 0
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:23 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES C , 1.50
	ELSEIF ABL:23 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:23 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:23 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

;ＬV３以上に上げるときは異常経験必要(素質:[解放][倒錯的][両刀][狂気]なら無視できる)
SIF ABL:23 >= 3 && (TALENT:33 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:123 == 0)
	E = ABL:23 - 2

;素直
IF TALENT:13
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
	TIMES D , 0.95
ENDIF
;無関心
IF TALENT:21
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
	TIMES D , 1.20
ENDIF
;好奇心
IF TALENT:23
	TIMES A , 0.95
	TIMES B , 0.95
	TIMES C , 0.95
	TIMES D , 0.95
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
	TIMES D , 1.20
ENDIF

