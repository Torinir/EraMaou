IF ABL:16 < ABL:30 + 1
	I |= 4
	J |= 4
ENDIF

;欲情の珠は足りている?
SIF JUEL:5 < A
	I |= 1
;屈服の珠は足りている?
SIF JUEL:6 < B
	I |= 1
;性交経験が必要
SIF EXP:5 < C
	I |= 2

