ENDIF

;快感に素直
IF TALENT:70
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
;快感の否定
ELSEIF TALENT:71
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES C , 1.10
ENDIF
;中毒しやすい
IF TALENT:72
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;即落ち
IF TALENT:73
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;淫乱
IF TALENT:76
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF

;男勝り
IF TALENT:79
	TIMES A , 2.00
