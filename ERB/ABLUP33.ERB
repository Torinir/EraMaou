;レズ中毒のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;レズ中毒のLvUP
;-------------------------------------------------
@ABLUP33
;オトコだとダメ
SIF TALENT:122
	RETURN 0
DRAWLINE
;PRINTL 奴隷のレズ行為への執着心を高めます
;PRINTL レズ中毒が高くなると,女性同士でのセックスや奉仕行為への満足感が深まり,
;PRINTL 頻繁に同性の体に触れていないと心が落ち着かなくなります
;PRINTL ..............................................................................
;レズ中毒はLv5が上限
;[淫乱][両刀][倒錯的][男嫌い]が付いている場合はLv10まで解放
IF ABL:33 >= 5 && (TALENT:76 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0)
	PRINTW Character qualities must be improved before this can be raised further.
	RETURN 0
ELSEIF ABL:33 >= 10
	PRINTW Already At MAX.
	RETURN 0
;精液中毒+レズ中毒+獣姦中毒は11以上にならない
ELSEIF ABL:32 + ABL:33 + ABL:39 >= 10
	PRINTFORMW 精液中毒({ABL:32})+レズ中毒({ABL:33})+獣姦中毒({ABL:39})の上限は10です
	RETURN 0
ENDIF

;必要な欲情-屈服の珠
A = 0
;必要な快Ｃの珠
B = 0
;必要なレズ経験回数
C = 0
;必要な異常経験回数
D = 0

;条件別にＯＫかダメかを記録する
I = 0

CALL DECIDE_ABLUP33

;ＬV2以上に上げるときは異常経験必要(素質:[倒錯的][両刀][男嫌い][中毒しやすい][狂気]なら無視できる)
SIF D > 0
	PRINTFORML %EXPNAME:50%{D}以上(現在{EXP:50})かつ

;レズっ気がレズ中毒+1レベルでないといけない
PRINTFORML %ABLNAME:22%{ABL:33 + 1}LV以上(現在{ABL:22}LV)かつ

PRINTFORM [0] - %PALAMNAME:0%の珠×{JUEL:0}/{B} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
PRINTFORML 　　　%PALAMNAME:5%の珠×{JUEL:5}/{A}
PRINTFORML 　　　%PALAMNAME:6%の珠×{JUEL:6}/{A}
PRINTFORML 　　　%EXPNAME:40%　{EXP:40}/{C}

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:33 += 1

IF RESULT == 0
	JUEL:0 -= B
	JUEL:5 -= A
	JUEL:6 -= A
ENDIF

PRINTFORML %ABLNAME:33%のレベルが{ABL:33}になりました

RETURN 0

;-------------------------------------------------
;レズ中毒のLvUP可否判定
;-------------------------------------------------
@DECIDE_ABLUP33
;オトコだとダメ
SIF TALENT:122
	RETURN 0
;レズ中毒はLv5が上限
;[淫乱][両刀][倒錯的][男嫌い]が付いている場合はLv10まで解放
SIF ABL:33 >= 10
	RETURN 0
SIF ABL:33 >= 5 && (TALENT:76 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0)
	RETURN 0
;精液中毒+レズ中毒+獣姦中毒は11以上にならない
SIF ABL:32 + ABL:33 + ABL:39 >= 10
	RETURN 0

;判定変数を空に
I = 0

A = 0
B = 0
C = 0
D = 0

IF ABL:33 == 0
	A = 1200
	B = 5000
	C = 300
ELSEIF ABL:33 == 1
	A = 3900
	B = 15000
	C = 600
ELSEIF ABL:33 == 2
	A = 6000
	B = 23000
	C = 1000
ELSEIF ABL:33 == 3
	A = 18000
	B = 50000
	C = 1400
ELSEIF ABL:33 == 4
	A = 30000
	B = 70000
	C = 2100
ELSEIF ABL:33 == 5
	A = 55000
	B = 120000
	C = 3000
ELSEIF ABL:33 == 6
	A = 70000
	B = 200000
	C = 4000
ELSEIF ABL:33 == 7
	A = 100000
	B = 350000
	C = 5200
ELSEIF ABL:33 == 8
	A = 150000
	B = 500000
	C = 6500
ELSEIF ABL:33 == 9
	A = 300000
	B = 800000
	C = 8000
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:33 == 3
		TIMES A , 1.50
		TIMES B , 1.50
		TIMES C , 1.50
	ELSEIF ABL:33 == 4
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:33 == 5
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:33 >= 6
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

;ＬV2以上に上げるときは異常経験必要(素質:[中毒しやすい][倒錯的][男嫌い][両刀][狂気]なら無視できる)
SIF ABL:33 >= 2 && ( TALENT:72 == 0 && TALENT:80 == 0 && TALENT:81 == 0 && TALENT:82 == 0 &&TALENT:123 == 0)
	D = ABL:33 - 1

;反抗的
IF TALENT:11
	TIMES A , 1.50
	TIMES B , 1.50
	TIMES C , 1.50
ENDIF
;自制心
IF TALENT:20
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF
;無関心
IF TALENT:21
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF
;保守的
IF TALENT:24
	TIMES A , 1.50
	TIMES B , 1.50
	TIMES C , 1.50
ENDIF

;抑圧
IF TALENT:32
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
;解放
ELSEIF TALENT:33
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;抵抗
IF TALENT:34
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
ENDIF
;舌使い
IF TALENT:52
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF
;汚臭鈍感
