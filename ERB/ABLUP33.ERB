;最低でも1回-1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;異常経験が不足
IF D > EXP:50
		I |= 2
		J |= 2
ENDIF

;レズっ気がレズ中毒+1レベルでないと能力不足
IF ABL:22 < ABL:33 + 1
	I |= 4
	J |= 4
ENDIF

;快Ｃの珠が不足
SIF JUEL:0 < B
	I |= 1
;欲情の珠が不足
SIF JUEL:5 < A
	I |= 1
;屈服の珠が不足
SIF JUEL:6 < A
	I |= 1
;レズ経験が不足
SIF EXP:40 < C
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF
