;獣姦中毒のLvUP処理とその可否判定
;eraIm@s_ver.0.17βdのスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;獣姦中毒のLvUP
;-------------------------------------------------
@ABLUP39
DRAWLINE
;PRINTL 奴隷の獣姦への執着心を高めます
;PRINTL 獣姦中毒が高くなると,動物とのセックスや奉仕行為への満足感が深まり,
;PRINTL 頻繁に動物相手に性行為をしていないと心が落ち着かなくなります
;PRINTL ..............................................................................
;獣姦中毒はLv5が上限
;[淫乱][動物耳][牝犬]が付いている場合はLv10まで解放
IF ABL:39 >= 5 && (TALENT:76 == 0 && TALENT:124 == 0 && TALENT:136 == 0)
	PRINTW Character qualities must be improved before this can be raised further.
	RETURN 0
ELSEIF ABL:39 >= 10
	PRINTW Already At MAX.
	RETURN 0
;精液中毒+レズ中毒+獣姦中毒は11以上にならない
ELSEIF ABL:32 + ABL:33 + ABL:39 >= 10
	PRINTFORMW 精液中毒({ABL:32})+レズ中毒({ABL:33})+獣姦中毒({ABL:39})の上限は10です
	RETURN 0
ENDIF

;必要な欲情の珠
A = 0
;必要な屈服の珠
B = 0
;必要な獣姦経験
C = 0
;必要な異常経験回数
F = 0

CALL DECIDE_ABLUP39

;上げるときは異常経験必要(素質:[淫乱][中毒しやすい]なら無視できる)
SIF F > 0
	PRINTFORML %EXPNAME:50%{F}以上(現在{EXP:50})かつ

;欲望が必要
PRINTFORML %ABLNAME:11%{ABL:39 + 1}LV以上(現在{ABL:11}LV)かつ

PRINTFORM [0] - %PALAMNAME:5%の珠×{JUEL:5}/{A} ......
IF I == 0
	PRINT OK
ELSE
	SIF I & 1
		PRINT Not enough points 
	SIF I & 2
		PRINT Not enough exp 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
PRINTFORML 　　　%PALAMNAME:6%の珠×{JUEL:6}/{B}
PRINTFORML 　　　%EXPNAME:56%　{EXP:56}/{C}
PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL Requirements haven't been met
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:39 += 1
IF RESULT == 0
	JUEL:5 -= A
	JUEL:6 -= B
ENDIF

PRINTFORML %ABLNAME:39%のレベルが{ABL:39}になりました

RETURN 0

;--------------------------------------------------
;レベルアップに必要な珠計算,レベルアップ予告処理
;--------------------------------------------------
@DECIDE_ABLUP39
;獣姦中毒はLv5が上限
;[淫乱][動物耳][牝犬]が付いている場合はLv10まで解放
SIF ABL:39 >= 10
	RETURN 0
SIF ABL:39 >= 5 && (TALENT:76 == 0 && TALENT:124 == 0 && TALENT:136 == 0)
	RETURN 0
;精液中毒+レズ中毒+獣姦中毒は11以上にならない
SIF ABL:32 + ABL:33 + ABL:39 >= 10
	RETURN 0

;条件別にＯＫかダメかを記録する
I = 0

IF ABL:39 == 0
	A = 2000
	B = 2000
	C = 30
ELSEIF ABL:39 == 1
	A = 5000
	B = 5000
	C = 100
ELSEIF ABL:39 == 2
	A = 10000
	B = 10000
	C = 220
ELSEIF ABL:39 == 3
	A = 20000
	B = 20000
	C = 400
ELSEIF ABL:39 == 4
	A = 30000
	B = 30000
	C = 800
ELSEIF ABL:39 == 5
	A = 45000
	B = 45000
	C = 1600
ELSEIF ABL:39 == 6
	A = 75000
	B = 75000
	C = 2000
ELSEIF ABL:39 == 7
	A = 100000
	B = 100000
	C = 2800
ELSEIF ABL:39 == 8
	A = 200000
	B = 200000
	C = 4000
ELSEIF ABL:39 == 9
	A = 300000
	B = 300000
	C = 6000
ENDIF

;一線越えない
IF TALENT:27
	IF ABL:37 == 3
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:37 == 4
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:37 >= 5
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

F = 0
;2以上に上げるときは異常経験必要(素質:[中毒しやすい][淫乱][牝犬]なら無視できる)
SIF ABL:39 >= 2 && (TALENT:72 == 0 && TALENT:76 == 0 && TALENT:136 == 0)
		F = ABL:39 + 1

;自制心
IF TALENT:20
	TIMES A , 2.50
	TIMES B , 2.50
	TIMES C , 1.50
ENDIF
;快感に素直
IF TALENT:70
	TIMES A , 0.75
	TIMES B , 0.75
;快感の否定
ELSEIF TALENT:71
	TIMES A , 1.75
	TIMES B , 1.75
ENDIF
;中毒しやすい
IF TALENT:72
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;倒錯的
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF
;狂気
IF TALENT:123
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;動物耳
IF TALENT:124
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF
;牝犬
IF TALENT:136
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;愛(心が主人に向いているので獣になびきにくい)
IF TALENT:85
	TIMES A , 1.80
	TIMES B , 1.80
	TIMES C , 1.50
ENDIF

;最低でも1回-1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;欲望が必要
SIF ABL:11 < ABL:39 + 1
	I |= 4
;欲情の珠は足りている?
SIF JUEL:5 < A
	I |= 1
;屈服の珠は足りている?
SIF JUEL:6 < B
	I |= 1

;獣姦経験は足りている?
SIF EXP:56 < C
	I |= 2
;異常経験は足りている?
SIF EXP:50 < F
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

