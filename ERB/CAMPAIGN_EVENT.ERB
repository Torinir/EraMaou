@CAMPAIGN_QUEST,ARG:0
;----------------------------------
;階層踏破時に発生するイベント
;ARG:0はリーダー

SIF FLAG:400 < 1
	RETURN 0
;階層を見て進行度と比較
LOCAL = CFLAG:(ARG:0):501
IF LOCAL > FLAG:401
	PRINTL ―STORY―
	FORCEWAIT
	TRYCALLFORM CAMPAIGN_STORY_{FLAG:400}
	;ストーリーが進む
	FLAG:401 += 1
ENDIF
RESULT = 0
TRYCALLFORM CAMPAIGN_QUEST_{FLAG:400},ARG:0
RETURN RESULT

