@CAMPAIGN_MENU
#DIM CHARA

PRINT 現在選択中のイベント...

IF FLAG:400 > 0
	TRYCALLFORM CAMPAIGN_NAME_{FLAG:400}
ELSE
	PRINT なし
ENDIF

PRINTL  
DRAWLINE

$INPUT_LOOP

IF FLAG:400 == 0
	PRINTL [0] キャンペ-ン選択
ELSE
	PRINTL [1] 奴隷選別(気力-100)
	PRINTL [2] 奴隷の派遣
	;PRINTL [3] 奴隷の強化状況確認
ENDIF

PRINTL [999] 戻る

INPUT

IF RESULT == 999
	RETURN 0
ELSEIF RESULT == 0 && FLAG:400 != 0
	PRINTL *キャンペ-ン中は変更できません*
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	CALL SELECT_CAMPAIGN
ELSEIF FLAG:400 == 0
	PRINTL *キャンペ-ンを選択してください*
	GOTO INPUT_LOOP
ELSEIF RESULT == 1
	;奴隷選別
	;キャラメイクできる
	PRINTL 気力を100消費します......
	IF BASE:0:1 < 100
		PRINTW *気力が足りない!*
		GOTO INPUT_LOOP
	ENDIF
	
	CALL RAND_CHARA_MAKE
	SIF RESULT == 0
		GOTO INPUT_LOOP
	CHARA = RESULT
	;成功した場合気力100消費
	BASE:0:1 -= 100
	;素質ON
	LOCAL = FLAG:400 + 360
	TALENT:CHARA:LOCAL = 1
	
ELSEIF RESULT == 2
	;奴隷派遣
	$INPUT_LOOP_2

	PRINTL 対象の奴隷を敵地に派遣します
	PRINTL 誰を派遣させますか?

	CALL LIFE_LIST
	PRINTL  [999] - 戻る
	
	INPUT
	
	;イベント素質
	LOCAL = FLAG:400 + 360
	IF RESULT == 999
		GOTO INPUT_LOOP
	ELSEIF RESULT < 0 || RESULT >= CHARANUM
		GOTO INPUT_LOOP_2
	;臨死中のキャラは排除
	ELSEIF BASE:RESULT:0 < 1
		GOTO INPUT_LOOP_2
	ELSEIF TALENT:RESULT:LOCAL == 0
		PRINTFORMW [%TALENTNAME:LOCAL%]を持たない奴隷は派遣できません
		GOTO INPUT_LOOP_2
	ELSEIF TALENT:RESULT:292
		PRINTFORMW %SAVESTR:RESULT%は影のため派遣できません
		GOTO INPUT_LOOP_2
	ELSEIF CFLAG:RESULT:1 == 12
		PRINTFORMW %SAVESTR:RESULT%はすでに派遣中です
		GOTO INPUT_LOOP_2
	ELSEIF CFLAG:RESULT:1 != 0
		PRINTFORMW %SAVESTR:RESULT%は派遣できる状態にありません
		GOTO INPUT_LOOP_2
	ENDIF
	CHARA = RESULT
	CFLAG:CHARA:1 = 12
	;現在階層と目標階層をリセット
	CFLAG:CHARA:501 = 1
	CFLAG:CHARA:507 = 0
	CFLAG:CHARA:520 = 0
	CFLAG:CHARA:521 = 1
	PRINTFORMW %SAVESTR:CHARA%を派遣しました
	GOTO INPUT_LOOP_2
ENDIF

GOTO INPUT_LOOP

