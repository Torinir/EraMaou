	;種族と性格
	PRINTFORM  %GET_LOOK_INFO(COUNT, "種族"),MAX_RACE_LEN,LEFT% - %GET_LOOK_INFO(COUNT, "性格"),MAX_MIND_LEN,LEFT%
	
	;所持金
	PRINTFORM  Wealth: {CFLAG:COUNT:580,MAX_MONEY_LEN,RIGHT} 
	
	;愛,淫乱
	IF TALENT:COUNT:愛
		SETCOLOR 255,100,100
		PRINT <Love>
		RESETCOLOR
	ELSEIF TALENT:COUNT:淫乱
		SETCOLOR 255,100,100
		PRINT <Lewd>
		RESETCOLOR
	ELSE
		SETCOLOR 100,100,100
		PRINT <Nothing>
		RESETCOLOR
	ENDIF
	;パーティフラグ
	;パーティメンバー
	IF CFLAG:COUNT:533 > 0 && CFLAG:COUNT:531 == 0 && CFLAG:COUNT:532 == 0 && CFLAG:COUNT:533 != COUNT
		SETCOLOR 255,100,100
		PRINTFORM  PM<{CFLAG:COUNT:533}>
		RESETCOLOR
	;パーティリーダー
	ELSEIF CFLAG:COUNT:533 > 0
		SETCOLOR 255,100,100
		PRINTFORM  PL<{CFLAG:COUNT:533}>
		RESETCOLOR
	ENDIF
	;帰還フラグ
	IF CFLAG:COUNT:507 == 1
		SETCOLOR 200,200,100
		PRINTFORM 《Returning》
		RESETCOLOR
	ENDIF
	;お気に入り
	IF CFLAG:COUNT:700
		PRINTFORM [☆]
