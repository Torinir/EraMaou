BASE:ARG:1 = MAXBASE:ARG:1

PRINTFORMW %SAVESTR:ARG%は%TALENTNAME:LOCAL%に転職した!

IF TALENT:ARG:204 == 1
	CALL JOB_CHANGE_BENKI(ARG)
ENDIF

