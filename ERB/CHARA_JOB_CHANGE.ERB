	TALENT:ARG:240 = 1
ELSEIF LOCAL == 201
	TALENT:ARG:241 = 1
ELSEIF LOCAL == 202
	TALENT:ARG:242 = 1
ELSEIF LOCAL == 203
	TALENT:ARG:243 = 1
ELSEIF LOCAL == 205
