@COM57
;羞恥プレイ

PRINTL 羞恥プレイ
;SAVESTR:22 = 羞恥プレイ
CALL TRAIN_MESSAGE_B

;鏡のセット
;終了時は修正なし
IF TEQUIP:57
	TEQUIP:57 = 0
	RETURN 1
ENDIF

LOSEBASE:0 += 0
LOSEBASE:1 += 200


A = 500
B = 500

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:5 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:5 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:5 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

;ABL:露出癖をみる
IF ABL:17 == 0
	SOURCE:7 += 0
	SOURCE:10 += 0
	SOURCE:13 += 600
	SOURCE:14 += 1000
	SOURCE:15 += 1000
	TIMES A, 0.60
ELSEIF ABL:17 == 1
	SOURCE:7 += 150
	SOURCE:10 += 150
	SOURCE:13 += 500
	TIMES A, 1.00
ELSEIF ABL:17 == 2
	SOURCE:7 += 300
	SOURCE:10 += 300
	SOURCE:13 += 400
	TIMES A, 1.60
ELSEIF ABL:17 == 3
	SOURCE:7 += 600
	SOURCE:10 += 600
	SOURCE:13 += 300
	TIMES A, 2.00
ELSEIF ABL:17 == 4
	SOURCE:7 += 1000
	SOURCE:10 += 1000
	SOURCE:13 += 200
	TIMES A, 2.60
ELSE
	SOURCE:7 += 1800
	SOURCE:10 += 1800
	SOURCE:13 += 100
	TIMES A, 3.80
ENDIF
;ABL:マゾっ気をみる
IF ABL:21 == 0
	TIMES A , 1.00
ELSEIF ABL:21 == 1
	TIMES A , 1.20
ELSEIF ABL:21 == 2
	TIMES A , 1.40
ELSEIF ABL:21 == 3
	TIMES A , 1.60
ELSEIF ABL:21 == 4
	TIMES A , 1.80
ELSE
	TIMES A , 2.00
ENDIF

;無関心
SIF TALENT:21
	TIMES A , 0.80
;感情乏しい
SIF TALENT:22
	TIMES A , 0.80
;好奇心
SIF TALENT:23
	TIMES A , 2.50
;解放
SIF TALENT:33
	TIMES A , 1.50

;臆病
SIF TALENT:10
	TIMES B , 1.50
;恥じらい
SIF TALENT:35
	TIMES B , 3.00

;倒錯的
SIF TALENT:80
	TIMES A , 1.50
	TIMES B , 1.20
;魅力
SIF TALENT:113
	SOURCE:3 += 500
	SOURCE:16 += 500
	TIMES A , 1.50
	TIMES B , 1.20

SOURCE:12 += A
SOURCE:14 += B
SOURCE:16 += A/2

TEQUIP:57 = 1

;愛情経験
E = 1
IF CFLAG:2 >= 1000 && ABL:17 >= 3 && ASSIPLAY == 0
	PRINTFORML %EXPNAME:23%+{E}
	EXP:23 += E
ENDIF
E = 0

RETURN 1


