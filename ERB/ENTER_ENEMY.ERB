CFLAG:A:502 = 0
CFLAG:A:1 = 2
CFLAG:A:508 = 3

;ランダム名前決定
CFLAG:A:6 = RAND:80

;初期座標
LOCAL:0 = RAND:32
LOCAL:1 = RAND:32

IF RAND:4 == 0
	LOCAL:0 = 0
ELSEIF RAND:3 == 0
	LOCAL:1 = 0
ELSEIF RAND:2 == 0
	LOCAL:0 = 31
ELSE
	LOCAL:1 = 31
ENDIF

CFLAG:A:510 = LOCAL:0
CFLAG:A:511 = LOCAL:1


