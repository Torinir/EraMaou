IF TALENT:(ARG:0):291 == 1
	W:9 -= 10
	W:11 += 10
ENDIF

;悪魔尻尾(ダメージ強化)
SIF TALENT:(ARG:0):246 == 1
	W:9 += 10

;悪魔目(気力ダメージ強化)
SIF TALENT:(ARG:0):247 == 1
	W:16 += 10

;隻眼(ダメージ強化-ミス増加)
IF TALENT:(ARG:0):259 == 1
	W:9 += 10
	W:11 += 10
ENDIF

;額の眼(気力ダメージ強化-気力消費)
IF TALENT:(ARG:0):260 == 1
	W:16 += 10
	W:12 -= 10
ENDIF

;角(ダメージ強化-気力消費)
IF TALENT:(ARG:0):264 == 1
	W:9 += 10
	W:12 -= 10
ENDIF

