@EQUIP_CHECK
;-------------------------------------------------
;W:8と同一の効果の強度合計を算出する.Aはキャラ

SIF A < 0
	RETURN 0
LOCAL = 0
W:0 = CFLAG:A:551
CALL EQUIP_DATABASE
IF RESULT
	SIF W:3 == W:8
		LOCAL += W:2
ENDIF

W:0 = CFLAG:A:552
CALL EQUIP_DATABASE
IF RESULT
	SIF W:3 == W:8
		LOCAL += W:2
ENDIF

RETURN LOCAL

