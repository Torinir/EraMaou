;各日の末日ならば月が替わる
;EVENT_TURNEND.ERBから呼び出される関数
;-------------------------------------------------
@EVENT_NEXTMONTH
IF DAY:1 == 2
	DAY:1 = DAY:1 + 1
	DAY:2 = 1
	PRINTFORML Starting from tomorrow it's month N {DAY:1}......
ELSEIF DAY:2 > 30 && ( DAY:1 == 4 || DAY:1 == 6 || DAY:1 == 9 || DAY:1 == 11 )
	DAY:1 = DAY:1 + 1
	DAY:2 = 1
	PRINTFORML Starting from tomorrow it's month N {DAY:1}......
ELSEIF DAY:2 > 31 && ( DAY:1 == 1 || DAY:1 == 3 || DAY:1 == 5 || DAY:1 == 7 || DAY:1 == 8 || DAY:1 == 10 )
	DAY:1 = DAY:1 + 1
	DAY:2 = 1
	PRINTFORML Starting from tomorrow it's month N {DAY:1}......
ELSEIF DAY:2 > 31 && DAY:1 == 12
	DAY:1 = 1
	DAY:2 = 1
	PRINTFORML Tomorrow new year starts......
ENDIF	


