@LIFE_LIST


REPEAT CHARANUM
	IF CFLAG:COUNT:1 == 0 && COUNT != 0 && BASE:COUNT:0 > 0
		PRINTFORM [{COUNT}] %SAVESTR:COUNT% {CFLAG:COUNT:9}LV
		SIF CFLAG:COUNT:1 == 0 &&CFLAG:COUNT:0 > 0 && COUNT != 0 && BASE:COUNT:0 > 0
			PRINT [Able To Be Sold]
		SIF CFLAG:COUNT:1 == 0 &&CFLAG:COUNT:0 == 2 && COUNT != 0 && BASE:COUNT:0 > 0
			PRINT [Able To Be Assistant]
		;愛,淫乱
		IF TALENT:COUNT:愛
			SETCOLOR 255,100,100
			PRINT <Love>
			RESETCOLOR
		ELSEIF TALENT:COUNT:淫乱
			SETCOLOR 255,100,100
			PRINT <Lewd>
			RESETCOLOR
		ELSE
			SETCOLOR 100,100,100
			PRINT <Nothing>
			RESETCOLOR
		ENDIF
		IF CFLAG:COUNT:1 == 12
			SETCOLOR 100,200,100
			PRINT [派遣]
			RESETCOLOR
		ENDIF
		PRINTL  
	ENDIF
REND
DRAWLINE
RETURN 0

