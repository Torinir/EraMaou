	RETURN 0
ELSEIF TARGET_TYPE == 2
	RETURN 0
ELSEIF TARGET_TYPE == 3 && TALENT:B:242 == 0
	RETURN 0
ENDIF


IF RAND:2 == 0
	CALL SHIELD_MAGIC
ELSE
	CALL HEAL_MAGIC
ENDIF

