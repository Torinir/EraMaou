;で内容のリストを取得できる
;
;ARG:0 = 対象キャラ
;RESULT = 刺青の数
;RESULT:1～10 = 刺青の位置(10～20)
@GET_TATOO, ARG:0
#LOCALSIZE 2
LOCAL:1 = 0
FOR LOCAL, 10, 20
	IF CSTR:(ARG:0):LOCAL != "" && CSTR:(ARG:0):LOCAL != "狂王の紋章"
		LOCAL:1 += 1
		RESULT:(LOCAL:1) = LOCAL
	ENDIF
NEXT
RETURN LOCAL:1


